    {{>footer}}

        <div class="modal-container" id="contact-modal">
        <div class="modal-content">
            <div class="modal-header clear-fix">
                <h3 class="modal-heading">Contact Us</h3>
                <a class="modal-close" href="#"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="contact-form">
                    <form action="/contact" method="POST" name="contact-form">
                        <div class="control-group">
                            <label for="from" class="control-label">Name</label>
                            <input type="text" name="from" id="from" class="control form-control" required="required"
                                placeholder="Name" />
                        </div>
                        <div class="control-group">
                            <label for="email" class="control-label">Email</label>
                            <input type="email" name="email" id="email" required="required" class="control form-control"
                                placeholder="Email" />
                        </div>
                        <div class="control-group">
                            <label for="phonenumber" class="control-label">Phone Number</label>
                            <input type="tel" name="phonenumber" id="phonenumber" class="control form-control"
                                placeholder="Phone Number" minlength="10" />
                        </div>
                        <div class="control-group">
                            <label for="message" class="control-label">Message</label>
                            <textarea name="message" id="message" rows="8" class="control form-textarea"
                                placeholder="Message" minlength="10" required="required"></textarea>
                        </div>
                        <div class="control-group">
                            <input type="submit" value="Send" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer"></div>
    </div>
    <div class="modal-container" id="reservation-modal">
        <div class="modal-content">
            <div class="modal-header clear-fix">
                <h3 class="modal-heading">Book A Table</h3>
                <a class="modal-close" href="#"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="reservation-form">
                    <form action="/reservations" method="POST" name="reservation-form" id="reservation-form">
                        <div class="control-group">
                            <label for="name" class="control-label">Name</label>
                            <input type="text" name="clientname" id="clientname" class="control form-control"
                                required="required" placeholder="Name" />
                        </div>
                        <div class="control-group">
                            <label for="email" class="control-label">Email</label>
                            <input type="email" name="email" id="email" required="required" class="control form-control"
                                placeholder="Email" />
                        </div>
                        <div class="control-group">
                            <label for="phone" class="control-label">Phone Number</label>
                            <input type="tel" name="phonenumber" id="phonenumber" class="control form-control"
                                placeholder="Phone Number" minlength="10" />
                        </div>
                        <div class="control-group">
                            <label for="additionaldetails" class="control-label">Additional Details</label>
                            <textarea name="additionaldetails" id="additionaldetails" rows="2"
                                class="control form-textarea" placeholder="Additional Details" minlength="10"
                                required="required"></textarea>
                        </div>
                        <div class="control-group clear-fix">
                            <label for="reservation-date" class="control-label">Date & Time Booked</label>
                            {{!-- <div class="row">
                                <div class=col-1-0f-3>
                                    <input type="date" name="reservationdate" id="reservationdate"
                                        class="control form-control" placeholder="Time Booked" required="required" />
                                </div>
                                <div class="col-2-of-3">
                                    <input type="time" name="reservationtime" id="reservationtime"
                                        class="control form-control" placeholder="Time Booked" required="required" />
                                </div>
                            </div> --}}
                            <div class=col-4-0f-4>
                                <input type="text" name="reservationdatetime" id="reservationdatetime"
                                    class="control form-control" placeholder="Time Booked" required="required"  />
                            </div>
                        </div>
                        <div class="control-group">
                            <input type="submit" value="Send" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
    <div class="modal-container" id="login-modal">
        <div class="modal-content">
            <div class="modal-header clear-fix">
                <h3 class="modal-heading">Login</h3>
                <a class="modal-close" href="#"><i class="fas fa-times"></i></a>
            </div>
            <div class="modal-body">
                <div class="login-form">
                    <h3 class="heading-tertiary">Login</h3>
                    <form method="POST" action="/login">
                        <div class="control-group">
                            <label for="username" class="control-label">Username</label>
                            <input type="text" name="username" id="username" class="control" placeholder="Username" />
                        </div>
                        <div class="control-group">
                            <label for="password" class="control-label">Password</label>
                            <input type="password" name="password" id="password" class="control"
                                placeholder="Password" />
                        </div>
                        <div class="control-group"></div>
                        <div class="control-group text-center">
                            <button class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer"></div>
    </div>
